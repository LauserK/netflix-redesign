@import "normalize"
@import "reset"

body
  background-color darken(#fff, 5%)

//Utilities
.a-activate
  color red !important

.u-wrapper
  width 90%
  max-width 1200px
  margin 0 auto
  
.margin-r
  margin-right .7rem

//Global styles
.btn
  background-color gray
  color white
  border none
  padding .8rem 1rem
  border-radius 10px
  margin-right 1rem
  transition .5s


  &:hover
    color darken(white, 10%)
    background-color darken(gray, 20%)

.btn-red
  background-color darken(red, 30%)

  &:hover
    background-color darken(red, 40%)

.btn-gray
  background-color lighten(#1d1d1d, 20%)

// Styles
.main__banner
  background-image url('../img/twd.png')
  background-size cover
  padding 1rem 0
  min-height 450px
  //box-shadow inset 0 0 200px black
  box-shadow 0 0 10px black
  z-index 3

  &__content
    background-color rgba(0, 0, 0, 0.1);
    width 450px
    margin-left 5rem
    margin-top 10rem
    padding 1rem
    border-radius 1rem

  &__promo__text, &__promo__details
    color white

  &__promo__stars
    color red
    font-weight 700
    margin-right 1rem

  &__promo__cta
    margin-top 1rem

  &__info
    font-weight 700

.main__content
  display flex
  margin-top 2rem
  margin-bottom 2rem

  &__column
    width 100%

    &:last-child
      margin-left 3rem

    &--mini
      max-width 200px

    .main__search
      background-color white      
      box-shadow 0px 0px 20px rgba(0,0,0,0.3)
      border-radius 10px
      overflow hidden

      input
        -webkit-appearance none
        -webkit-user-select none
        border 1px solid #fff
        width 100%
        color lighten(gray, 10%)
        font-weight 700
        padding 1rem
        border-radius 10px
        
        &:focus
          outline none

    
    .main__filters
      a
        display block
        border 1px solid gray      
        border-radius 5px
        color black !important
        padding .5rem 
        background-color darken(white, 6%)
        position relative
        
        &:after
          content "X"    
          position absolute
          right 0
          margin-right .3rem
          
        &:hover
          background-color darken(white, 15%)

    .main__browse
      padding 1rem
      background-color #fff
      border-radius 10px
      box-shadow 0px 0px 20px rgba(0,0,0,0.3)
      
      &:last-child
        margin-top 1rem

      .categories
        padding 0

        li
          display block
          margin-bottom 1rem

          a
            font-weight 300
            color lighten(gray, 10%)
            transition .5s
            
            &:hover
              color red

      h2
        text-transform uppercase
        font-size 1.2rem
        
    .main__cards
      margin-top 1rem
      display flex
      flex-wrap wrap
      justify-content space-between
      
      .main__card
        background-color white
        width 32%
        border-radius 5px
        box-shadow 0 0 20px rgba(0,0,0,0.4)
        margin-bottom 1rem        
        
        &__img-container
          img
            width 100%
            border-radius 5px 5px 0 0

        &__header
          margin-bottom 1rem
        
        &__secondary-info
          display flex
          font-size .95rem
        
        &__footer
          margin-top 1.2rem
          display flex                   
          
          .btn 
            display block
            max-width 150px
            width 100%
            text-align center
            margin 0
            
            &:first-child
              margin-right 1rem

        &__info
          padding 1rem

  h2
    margin 0

.header
  display flex
  justify-content space-between

  &__column
    display flex

  &__logo
    width 150px

    img
      width 100%

  &__left__menu
    ul
      li
        display inline-block
        margin-right 1rem

        &:last-child
          margin 0

        a
          color white
          transition .5s

          &:hover
            color darken(white, 10%)


  &__user
    display flex
    align-items center
    color white

    &__avatar
      height 40px
      width 40px
      margin-right .5rem

      img
        border-radius 50%
        width 100%

    &__username
      a
        color white
        font-weight 700

        &:hover
          color darken(white, 10%)
